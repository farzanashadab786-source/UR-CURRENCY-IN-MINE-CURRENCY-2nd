    <script>
        function calculate() {
            let val = document.getElementById("amt").value;
            let rate = document.getElementById("curr").value;
            if(!val) { alert("Bhai, kuch dalo!"); return; }

            let inr = val * rate;
            document.getElementById("res").innerText = "‚Çπ " + inr.toLocaleString('en-IN');

            let p = document.getElementById("pic");
            let m = document.getElementById("msg");
            let s = document.getElementById("status");
            let n = document.getElementById("name");

            p.style.display = "block";
            m.style.display = "none";

            if (inr >= 2000000000000) {
                p.src = "https://images.unsplash.com/photo-1462331940025-496dfbfc7564?w=400";
                s.innerText = "Status: Einstein Level ‚öõÔ∏è";
                n.innerText = "ANTI-MATTER UNLOCKED";
            } else if (inr >= 60000) {
                p.src = "https://images.unsplash.com/photo-1496181133206-80ce9b88a853?w=400";
                s.innerText = "Status: Pro Coder üíª";
                n.innerText = "GAMING LAPTOP (Goal)";
            } else if (inr >= 500) {
                p.src = "https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?w=400";
                s.innerText = "Status: Hustler üì±";
                n.innerText = "WIFI RECHARGE UNLOCKED";
            } else {
                p.src = "https://images.unsplash.com/photo-1549007994-cb92caebd54b?w=400";
                s.innerText = "Status: Choti Shuruat üç´";
                n.innerText = "Dairy Milk Chocolate";
            }
        }
    </script>
